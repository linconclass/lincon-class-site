@page "/contato"

<div class="container-fluid px-0">
    <!-- Banner Superior (igual outras páginas) -->
    <section class="page-banner">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="page-title mb-2">Vamos Conversar</h1>
                    <p class="page-subtitle mb-0">Entre em contato e vamos criar algo especial juntos</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Conteúdo Principal -->
    <div class="container mt-4">
        <div class="row g-4">
            <!-- LADO A - Informações de Contato -->
            <div class="col-lg-5">
                <!-- Seção 1: Informações de Contato -->
                <div class="contact-section mb-4">
                    <h4 class="section-header mb-3">
                        <i class="fas fa-address-book me-2"></i>Informações de Contato
                    </h4>

                    <!-- WhatsApp -->
                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="contact-icon me-3">
                                <i class="fab fa-whatsapp fa-lg text-success"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">WhatsApp</h6>
                                <p class="mb-0 text-muted small">(21) 96990-9037</p>
                            </div>
                        </div>
                        <a href="https://wa.me/5521969909037? text=Olá! Gostaria de mais informações sobre suas performances."
                           class="btn btn-success btn-sm w-100"
                           target="_blank">
                            <i class="fab fa-whatsapp me-1"></i>Conversar Agora
                        </a>
                    </div>

                    <!-- Telefone -->
                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="contact-icon me-3">
                                <i class="fas fa-phone fa-lg text-primary"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Telefone</h6>
                                <p class="mb-0 text-muted small">(21) 96990-9037</p>
                            </div>
                        </div>
                        <a href="tel:+5521969909037" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fas fa-phone me-1"></i>Ligar Agora
                        </a>
                    </div>

                    <!-- E-mail -->
                    <div class="contact-item mb-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="contact-icon me-3">
                                <i class="fas fa-envelope fa-lg text-warning"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">E-mail</h6>
                                <p class="mb-0 text-muted small">contato@linconclass.com</p>
                            </div>
                        </div>
                        <a href="mailto:contato@linconclass.com" class="btn btn-outline-warning btn-sm w-100">
                            <i class="fas fa-envelope me-1"></i>Enviar E-mail
                        </a>
                    </div>

                    <!-- Localização -->
                    <div class="contact-item">
                        <div class="d-flex align-items-center">
                            <div class="contact-icon me-3">
                                <i class="fas fa-map-marker-alt fa-lg text-danger"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Localização</h6>
                                <p class="mb-0 text-muted small">Niterói - RJ e Região</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seção 2: Redes Sociais -->
                <div class="social-section">
                    <h4 class="section-header mb-3">
                        <i class="fas fa-share-alt me-2"></i>Redes Sociais
                    </h4>
                    <div class="social-grid">
                        <a href="https://www.instagram.com/linconclass" class="social-btn instagram">
                            <i class="fab fa-instagram"></i>
                            <span>Instagram</span>
                        </a>
                        <a href="https://www.youtube.com/linconclass" class="social-btn youtube">
                            <i class="fab fa-youtube"></i>
                            <span>YouTube</span>
                        </a>
                        <a href="https://www.facebook.com/linconclassoficial" class="social-btn facebook">
                            <i class="fab fa-facebook"></i>
                            <span>Facebook</span>
                        </a>
                        <a href="#" class="social-btn tiktok">
                            <i class="fab fa-tiktok"></i>
                            <span>TikTok</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- LADO B - Formulário -->
            <div class="col-lg-7">
                <div class="form-section">
                    <div class="form-header mb-4">
                        <h4 class="section-header mb-2">
                            <i class="fas fa-edit me-2"></i>Briefing para Evento
                        </h4>
                        <p class="text-muted mb-0">
                            Preencha o formulário abaixo para contar sobre seu evento.
                            Entrarei em contato para discutirmos os detalhes!
                        </p>
                    </div>

                    <div class="form-embed-container">
                        <div class="ratio ratio-16x9">
                            <iframe src="https://forms.office.com/r/xy8sUG9xsx"
                                    title="Formulário de Briefing"
                                    style="border: none; border-radius: 8px;">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>