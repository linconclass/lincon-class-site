@page "/galeriafotos"

<!-- Banner -->
<section class="page-banner">
    <div class="container">
        <h1 class="page-title">Galeria de Fotos</h1>
        <p class="page-subtitle">Momentos especiais em cada performance</p>
    </div>
</section>

<div class="container">
    <div class="modern-container">
        <!-- Filtros -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    <button class="btn btn-sm btn-outline-dark active">Todos</button>
                    <button class="btn btn-sm btn-outline-dark">Casamentos</button>
                    <button class="btn btn-sm btn-outline-dark">Corporativos</button>
                    <button class="btn btn-sm btn-outline-dark">Shows</button>
                </div>
            </div>
        </div>

        <!-- Grid de Fotos -->
        <div class="row g-3">
            @for (int i = 1; i <= 9; i++)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="gallery-card-compact card-modern">
						<img src="/images/galerry/foto 1.jpg" 
                             class="gallery-image-compact"
                             alt="Performance em evento"/>
                        <div class="gallery-overlay-compact">
                            <button class="btn btn-light btn-sm">
                                <i class="fas fa-expand"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Botão Ver Mais -->
        <div class="row mt-4">
            <div class="col-12 text-center">
                <button class="btn btn-outline-dark">
                    <i class="fas fa-plus me-2"></i>Carregar Mais Fotos
                </button>
            </div>
        </div>
    </div>
</div>