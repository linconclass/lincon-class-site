@page "/galeriavideos"

<!-- Banner -->
<section class="page-banner">
    <div class="container">
        <h1 class="page-title">Galeria de Vídeos</h1>
        <p class="page-subtitle">Assista e sinta a emoção das performances</p>
    </div>
</section>

<div class="container">
    <div class="modern-container">
        <!-- Vídeo em Destaque -->
        <div class="video-featured card-modern mb-5">
            <div class="ratio ratio-16x9">
                <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                        title="Performance em Destaque"
                        allowfullscreen>
                </iframe>
            </div>
            <div class="p-3">
                <h5 class="mb-1">Performance em Destaque</h5>
                <p class="text-muted mb-0">Evento especial - Show recente</p>
            </div>
        </div>

        <!-- Grid de Vídeos -->
        <div class="row g-3">
            @for (int i = 1; i <= 6; i++)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="video-card-compact card-modern">
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ"
                                    title="Performance @i"
                                    allowfullscreen>
                            </iframe>
                        </div>
                        <div class="p-3">
                            <h6 class="mb-1">Performance @i</h6>
                            <p class="text-muted mb-0 small">Evento especial - Data</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>